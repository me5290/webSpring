{{>ezen/header}}
    <div id="signBox">
        <h1>회원가입 페이지</h1>
        <script src="/js/member.js"></script>

        <form class="signUpForm">
            <ul>
                <li class="checkbox">
                    아이디<input onkeyup="idCheck()" type="text" id="id" name="id"/>
                    <span class="idcheckbox"></span>
                </li>
                <li class="checkbox">
                    비밀번호<input onkeyup="pwCheck()" type="password" id="pw" name="pw"/>
                    <span class="pwcheckbox"></span>
                </li>
                <li class="checkbox">
                    비밀번호 확인<input onkeyup="pwCheck()" type="password" id="pwconfirm" name="pwconfirm"/>
                    <span class="pwconfirmcheckbox"></span>
                </li>
                <li class="checkbox">
                    이름<input onkeyup="nameCheck()" type="text" id="name" name="name"/>
                    <span class="namecheckbox"></span>
                </li>
                <li class="checkbox">
                    전화번호<input onkeyup="phoneCheck()" type="text" id="phone" name="phone"/>
                    <span class="phonecheckbox"></span>
                </li>
                <li class="checkbox">
                    이메일<input onkeyup="emailCheck()" type="text" id="email" name="email"/>
                    <span class="emailcheckbox"></span>
                </li>
                <li>
                    프로필 사진<input onchange="onChangeImg(this)" type="file" id="img" name="img" accept="image/*"/>
                </li>
                <li>
                    <img id="preimg" src="/img/default.jpg" width="250px"/>
                </li>
            </ul>
            <button class="btn" type="button" onclick="signup()">회원가입</button>
            <a href="/member/login">
                <button class="btn" type="button">
                    로그인
                </button>
            </a>
        </form>
    </div>
{{>ezen/footer}}